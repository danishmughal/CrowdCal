<h1>Crowdcal</h1>

<%= form_tag('/search/events', :method => "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>


<h2><%= link_to "Events", events_path %></h2>
<br>
<br>

<h3>Upcoming Events:</h3>
<% if !@events.nil? %>
	
	<% @events.each do |e| %>

		<strong>Name:</strong> <%= link_to e.name, e %><br>
		<strong>Venue:</strong> <%= e.venue %><br>
		<strong>When:</strong> <%= e.start_time %> - <%= e.end_time %><br>
		<strong>Description:</strong> <%= e.description %><br>

		<br>
		<br>
		<br>

	<% end %>

<% else %>
No upcoming events.
<% end %>


<h3>Past Events:</h3>
<% if !@pastevents.nil? %>
	
	<% @pastevents.each do |e| %>

		<strong>Name:</strong> <%= link_to e.name, e %><br>
		<strong>Venue:</strong> <%= e.venue %><br>
		<strong>When:</strong> <%= e.start_time %> - <%= e.end_time %><br>
		<strong>Description:</strong> <%= e.description %><br>

		<br>
		<br>
		<br>

	<% end %>

<% else %>
No Past events.
<% end %>